        abs_fn(b)(j) = triangle_row_indicator(b, n, i, j) + tail_triangle_row_indicator(b, n, i, j)
    }
}

/// Decompose the partial_sum sum of |b| into triangular and tail contributions for a fixed row.
theorem tail_triangle_indicator_partial_sum_split(b: Nat -> Real, n: Nat, i: Nat) {
    partial_sum(abs_fn(b), n) =
        partial_sum(triangle_row_indicator(b, n, i), n) + partial_sum(tail_triangle_row_indicator(b, n, i), n)
} by {
    define tri(col_idx: Nat) -> Real { triangle_row_indicator(b, n, i, col_idx) }
    define tail(col_idx: Nat) -> Real { tail_triangle_row_indicator(b, n, i, col_idx) }

    from list.list_sum import partial_sum_pointwise_eq
    partial_sum_pointwise_eq(tri, triangle_row_indicator(b, n, i), n)

    partial_sum_pointwise_eq(tail, tail_triangle_row_indicator(b, n, i), n)

    partial_sum_pointwise_eq(add_fn(tri, tail), abs_fn(b), n)

    from list.list_sum import partial_sum_add
    partial_sum_add(tri, tail, n)

}

/// Solve for the tail indicator partial_sum sum in terms of |b| and the triangular indicator.
theorem tail_triangle_indicator_partial_sum_eq_diff(b: Nat -> Real, n: Nat, i: Nat) {
    partial_sum(tail_triangle_row_indicator(b, n, i), n) =
        partial_sum(abs_fn(b), n) - partial_sum(triangle_row_indicator(b, n, i), n)
} by {
    tail_triangle_indicator_partial_sum_split(b, n, i)

    sub_moves_sides(partial_sum(tail_triangle_row_indicator(b, n, i), n),
        partial_sum(triangle_row_indicator(b, n, i), n), partial_sum(abs_fn(b), n))
}

/// Row sums equal |a(i)| times the difference between |b| and the triangular contribution.
theorem tail_triangle_row_sum_abs_eq_abs_diff(seq_a: Nat -> Real, seq_b: Nat -> Real, bound: Nat, row_idx: Nat) {
    row_sum(bound, tail_triangle_product(abs_fn(seq_a), abs_fn(seq_b), bound), row_idx) =
        abs_fn(seq_a)(row_idx) * (
            partial_sum(abs_fn(seq_b), bound) -
                partial_sum(triangle_row_indicator(seq_b, bound, row_idx), bound))
} by {
    define row(col_idx: Nat) -> Real {
        tail_triangle_product(abs_fn(seq_a), abs_fn(seq_b), bound, row_idx, col_idx)
    }
    define indicator(col_idx: Nat) -> Real {
        tail_triangle_row_indicator(seq_b, bound, row_idx, col_idx)
    }
    define scaled(col_idx: Nat) -> Real {
        abs_fn(seq_a)(row_idx) * indicator(col_idx)
    }

    from list.list_sum import partial_sum_pointwise_eq
    partial_sum_pointwise_eq(row, scaled, bound)

    sum(map(bound.range, row)) = sum(map(bound.range, scaled))

    partial_sum_mul_scalar_right(indicator, abs_fn(seq_a)(row_idx), bound)

    partial_sum_pointwise_eq(mul_fn(abs_fn(seq_a)(row_idx), indicator), scaled, bound)

    partial_sum(indicator, bound) * abs_fn(seq_a)(row_idx) =
        sum(map(bound.range, scaled))

    real_mul_comm(partial_sum(indicator, bound), abs_fn(seq_a)(row_idx))

    tail_triangle_indicator_partial_sum_eq_diff(seq_b, bound, row_idx)

}

/// The row indicator never exceeds |b(j)|.
theorem tail_triangle_row_indicator_le_abs(b: Nat -> Real, n: Nat, i: Nat, j: Nat) {
    tail_triangle_row_indicator(b, n, i, j) <= abs_fn(b)(j)
} by {
    if i + j < n {
        abs_fn_nonneg(b, j)
    } else {
        tail_triangle_row_indicator(b, n, i, j) <= abs_fn(b)(j)
    }
}

/// On the lower triangular region, the indicator is zero.
theorem tail_triangle_row_indicator_zero(b: Nat -> Real, n: Nat, i: Nat, j: Nat) {
    i + j < n implies tail_triangle_row_indicator(b, n, i, j) = Real.0
}

/// Past the diagonal threshold, the indicator is exactly |b(j)|.
theorem tail_triangle_row_indicator_ge_abs(b: Nat -> Real, n: Nat, i: Nat, j: Nat) {
    not (i + j < n) implies tail_triangle_row_indicator(b, n, i, j) = abs_fn(b)(j)
}

/// Bound a row sum by |a(i)| times the partial_sum sum of |b|.
theorem tail_triangle_row_sum_abs_le(a: Nat -> Real, b: Nat -> Real, n: Nat, i: Nat) {
    row_sum(n, tail_triangle_product(abs_fn(a), abs_fn(b), n), i) <= abs_fn(a)(i) * partial_sum(abs_fn(b), n)
} by {
    define row(j: Nat) -> Real { tail_triangle_product(abs_fn(a), abs_fn(b), n, i, j) }
    define indicator(j: Nat) -> Real { tail_triangle_row_indicator(b, n, i, j) }

    from list.list_sum import partial_sum_pointwise_eq
    partial_sum_pointwise_eq(row, mul_fn(abs_fn(a)(i), indicator), n)

    partial_sum_mul_scalar_right(indicator, abs_fn(a)(i), n)

    partial_sum_lte_partial_sum(indicator, abs_fn(b), n)

    abs_fn_nonneg(a, i)
    zero_lte_imp_non_neg(abs_fn(a)(i))
    lte_mul_nonneg_right(partial_sum(indicator, n), partial_sum(abs_fn(b), n), abs_fn(a)(i))
    partial_sum(indicator, n) * abs_fn(a)(i) <= partial_sum(abs_fn(b), n) * abs_fn(a)(i)

    real_mul_comm(partial_sum(abs_fn(b), n), abs_fn(a)(i))

}

/// Bound the tail triangle double sum by the product of partial_sum absolute sums.
theorem tail_triangle_rectangular_sum_abs_le_partial_sum_product(a: Nat -> Real, b: Nat -> Real, n: Nat) {
    rectangular_sum(n, n, tail_triangle_product(abs_fn(a), abs_fn(b), n)) <= partial_sum(abs_fn(a), n) * partial_sum(abs_fn(b), n)
} by {
    define rows(i: Nat) -> Real { row_sum(n, tail_triangle_product(abs_fn(a), abs_fn(b), n), i) }
    define bound(i: Nat) -> Real { abs_fn(a)(i) * partial_sum(abs_fn(b), n) }

    partial_sum_lte_partial_sum(rows, bound, n)

    rectangular_sum_expands(n, n, tail_triangle_product(abs_fn(a), abs_fn(b), n))

    from list.list_sum import partial_sum_pointwise_eq
    partial_sum_pointwise_eq(bound, mul_fn(partial_sum(abs_fn(b), n), abs_fn(a)), n)
    sum(map(n.range, bound)) = sum(map(n.range, mul_fn(partial_sum(abs_fn(b), n), abs_fn(a))))

    partial_sum_mul_scalar_right(abs_fn(a), partial_sum(abs_fn(b), n), n)

    rectangular_sum(n, n, tail_triangle_product(abs_fn(a), abs_fn(b), n)) <= partial_sum(abs_fn(a), n) * partial_sum(abs_fn(b), n)
}

/// Bound the magnitude of the difference between product of partial_sum sums and the partial_sum
/// sums of the Cauchy product.
theorem partial_sum_product_diff_abs_le(a: Nat -> Real, b: Nat -> Real, n: Nat) {
    (partial_sum(a, n) * partial_sum(b, n) - partial_sum(cauchy_seq(a, b), n)).abs <= rectangular_sum(n, n, tail_triangle_product(abs_fn(a), abs_fn(b), n))
} by {
    partial_sum_product_minus_cauchy(a, b, n)

    // Apply triangle inequality to the double sum representation.
    rectangular_sum_expands(n, n, tail_triangle_product(a, b, n))

    // Bound each row sum using triangle inequality.
    forall(i: Nat) {
        define row(j: Nat) -> Real { tail_triangle_product(a, b, n, i, j) }
        define row_abs(j: Nat) -> Real { tail_triangle_product(abs_fn(a), abs_fn(b), n, i, j) }

        sum_triangle_ineq(map(n.range, row))

        map_map(n.range, row, Real.abs)

        from list.list_sum import partial_sum_pointwise_eq
        partial_sum_pointwise_eq(compose(Real.abs, row), row_abs, n)
        sum(map(n.range, compose(Real.abs, row))) = sum(map(n.range, row_abs))

        (row_sum(n, tail_triangle_product(a, b, n), i)).abs <= row_sum(n, tail_triangle_product(abs_fn(a), abs_fn(b), n), i)
    }

    // Apply sum_triangle_ineq again to combine row contributions.
    sum_triangle_ineq(map(n.range, row_sum(n, tail_triangle_product(a, b, n))))

    map_map(n.range, row_sum(n, tail_triangle_product(a, b, n)), Real.abs)

    sum_map_range_le(n,
        compose(Real.abs, row_sum(n, tail_triangle_product(a, b, n))),
        row_sum(n, tail_triangle_product(abs_fn(a), abs_fn(b), n)))

    sum(map(n.range, compose(Real.abs, row_sum(n, tail_triangle_product(a, b, n))))) <= sum(map(n.range, row_sum(n, tail_triangle_product(abs_fn(a), abs_fn(b), n))))

}

/// Helper: Cauchy product partial_sum sums of nonnegative sequences are bounded by product of partial_sum sums.
/// For nonnegative sequences a and b:
/// ∑_{k=0}^{n-1} (∑_{i=0}^{k} a_i * b_{k-i}) ≤ (∑_{i=0}^{n-1} a_i) * (∑_{j=0}^{n-1} b_j)
///
/// The partial_sum sum of the Cauchy sequence sums over all terms a(i)*b(j) where i+j < n (a triangular region).
/// The product of partial_sum sums sums over all terms a(i)*b(j) where i < n and j < n (a square region).
/// Since the triangle is contained in the square and all terms are nonnegative, the result follows.
theorem cauchy_partial_sum_product_bound(a: Nat -> Real, b: Nat -> Real, n: Nat) {
    is_lower_bound(a, Real.0) and is_lower_bound(b, Real.0)
    implies
    partial_sum(cauchy_seq(a, b), n) <= partial_sum(a, n) * partial_sum(b, n)
} by {
    if is_lower_bound(a, Real.0) and is_lower_bound(b, Real.0) {
        // Key insight: For all i, j with i+j < n, we have both i < n and j < n.
        // Therefore triangle_product(a, b, n, i, j) <= prod_fn(a, b)(i)(j) when i < n and j < n.

        forall(i: Nat, j: Nat) {
            if i < n and j < n {
                if i + j < n {
                    // When i+j < n, triangle_product equals the actual product
                } else {
                    // When i+j >= n, triangle_product is 0, which is <= the nonnegative product

                    // Both a(i) and b(j) are nonnegative
                    mul_nonneg(a(i), b(j))
                    Real.0 <= a(i) * b(j)
                    triangle_product(a, b, n, i, j) <= prod_fn(a, b)(i)(j)
                }
            }
        }

        // Apply pointwise comparison to double sums
        rectangular_sum_pointwise_le(n, n, triangle_product(a, b, n), prod_fn(a, b))

        // Use partial_sum_cauchy_as_triangle
        partial_sum_cauchy_as_triangle(a, b, n)

        // Use partial_sum_product_as_rectangular_sum
        partial_sum_product_as_rectangular_sum(a, b, n)

        // Combine
        rectangular_sum(n, n, triangle_product(a, b, n)) <= rectangular_sum(n, n, prod_fn(a, b))
    }
}

/// Mertens' Theorem: The Cauchy product of two absolutely convergent series converges absolutely.
/// This is the key result needed to prove e^x * e^y = e^(x+y).
theorem cauchy_product_abs_converges(a: Nat -> Real, b: Nat -> Real) {
    absolutely_converges(a) and absolutely_converges(b)
    implies
    absolutely_converges(cauchy_seq(a, b))
} by {
    from real.real_series import monotone_convergence_principle, nonneg_partial_sum_increasing, increasing_convergent_bounded_by_limit, is_increasing, is_upper_bound

    if absolutely_converges(a) and absolutely_converges(b) {
        // abs_fn(a) and abs_fn(b) are nonnegative
        is_lower_bound(abs_fn(a), Real.0)

        // Get upper bounds from absolute convergence

        increasing_convergent_bounded_by_limit(partial_sum(abs_fn(a)))

        increasing_convergent_bounded_by_limit(partial_sum(abs_fn(b)))

        // Show abs_fn(cauchy_seq(a, b)) is nonnegative and its partial_sums are increasing

        forall(n: Nat) {
            nonneg_partial_sum_increasing(abs_fn(cauchy_seq(a, b)))
        }

        // Show partial_sum(abs_fn(cauchy_seq(a, b))) is bounded

        forall(n: Nat) {
            partial_sum_lte_partial_sum(abs_fn(cauchy_seq(a, b)), cauchy_seq(abs_fn(a), abs_fn(b)), n)

            cauchy_partial_sum_product_bound(abs_fn(a), abs_fn(b), n)

            is_upper_bound(partial_sum(abs_fn(a)), limit(partial_sum(abs_fn(a))))
            is_upper_bound(partial_sum(abs_fn(b)), limit(partial_sum(abs_fn(b))))
            partial_sum(abs_fn(b), n) <= limit(partial_sum(abs_fn(b)))

            nonneg_partial_sum_increasing(abs_fn(a))
            nonneg_partial_sum_increasing(abs_fn(b))
            Real.0 <= partial_sum(abs_fn(a), n)
            Real.0 <= partial_sum(abs_fn(b), n)
            mul_le_mul_nonneg(partial_sum(abs_fn(a), n), partial_sum(abs_fn(b), n), limit(partial_sum(abs_fn(a))), limit(partial_sum(abs_fn(b))))

            partial_sum(abs_fn(cauchy_seq(a, b)), n) <= partial_sum(cauchy_seq(abs_fn(a), abs_fn(b)), n)
            partial_sum(cauchy_seq(abs_fn(a), abs_fn(b)), n) <= partial_sum(abs_fn(a), n) * partial_sum(abs_fn(b), n)
            partial_sum(abs_fn(a), n) * partial_sum(abs_fn(b), n) <= limit(partial_sum(abs_fn(a))) * limit(partial_sum(abs_fn(b)))
            partial_sum(abs_fn(cauchy_seq(a, b)), n) <= limit(partial_sum(abs_fn(a))) * limit(partial_sum(abs_fn(b)))
        }

        is_upper_bound(partial_sum(abs_fn(cauchy_seq(a, b))), limit(partial_sum(abs_fn(a))) * limit(partial_sum(abs_fn(b))))

        // Apply monotone convergence principle
        monotone_convergence_principle(partial_sum(abs_fn(cauchy_seq(a, b))), limit(partial_sum(abs_fn(a))) * limit(partial_sum(abs_fn(b))))
        absolutely_converges(cauchy_seq(a, b))
    }
}

/// The Cauchy product of two absolutely convergent series converges (not just absolutely).
theorem cauchy_seq_converges(a: Nat -> Real, b: Nat -> Real) {
    absolutely_converges(a) and absolutely_converges(b)
    implies
    converges(partial_sum(cauchy_seq(a, b)))
}

/// Helper: For absolutely convergent series, partial_sum sum differences with fixed offset vanish.
/// This is key for showing that individual tail triangle rows vanish as n increases.
theorem partial_sum_diff_vanishes_fixed_offset(a: Nat -> Real, k: Nat, eps: Real) {
    absolutely_converges(a) and eps.is_positive
    implies
    exists(big_n: Nat) {
        forall(n: Nat) {
            big_n + k <= n
            implies
            (partial_sum(abs_fn(a), n) - partial_sum(abs_fn(a), n - k)).abs < eps
        }
    }
} by {
    if absolutely_converges(a) and eps.is_positive {
        // abs_fn(a) partial_sum sums converge
        let lim = limit(partial_sum(abs_fn(a)))

        // By convergence, both partial_sum(abs_fn(a), n) and partial_sum(abs_fn(a), n-k) approach lim
        // So their difference approaches 0

        // Use tail_bound to get big_n
        // Get eps_half such that eps_half + eps_half < eps
        let eps_half: Real satisfy {
            eps_half.is_positive and eps_half + eps_half < eps
        }

        let big_n: Nat satisfy {
            tail_bound(partial_sum(abs_fn(a)), lim, big_n, eps_half)
        }

        forall(n: Nat) {
            if big_n + k <= n {
                // Prove n - k >= big_n from big_n + k <= n
                // This is basic arithmetic but needs explicit steps
                // From big_n + k <= n, we get k <= n
                // By add_sub: n - k + k = n
                add_sub(n, k)
                // By add_comm: k + (n - k) = n
                add_comm(k, n - k)
                k + (n - k) = n
                // Therefore big_n + k <= k + (n - k)
                // Which means big_n <= n - k
                big_n <= n - k

                // Both n and n-k are >= big_n, so both are close to lim

                // If x is close to lim within eps_half and y is close to lim within eps_half,
                // then |x - y| < eps_half + eps_half < eps by triangle inequality
                (partial_sum(abs_fn(a), n) - lim).abs < eps_half
                (partial_sum(abs_fn(a), n - k) - lim).abs < eps_half

                // Use triangle inequality
                from real.real_series import triangle_ineq
                from real.real_base import lte_lt_trans

                let x_diff = partial_sum(abs_fn(a), n) - lim
                let y_diff = partial_sum(abs_fn(a), n - k) - lim
                let diff = partial_sum(abs_fn(a), n) - partial_sum(abs_fn(a), n - k)

                // Show diff = x_diff - y_diff algebraically
                // diff = partial_sum(abs_fn(a), n) - partial_sum(abs_fn(a), n - k)
                //      = (partial_sum(abs_fn(a), n) - lim) - (partial_sum(abs_fn(a), n - k) - lim) + lim - lim
                //      = x_diff - y_diff
                partial_sum(abs_fn(a), n - k) = y_diff + lim

                // Apply triangle inequality: |x - y| <= |x| + |-y| = |x| + |y|
                triangle_ineq(x_diff, -y_diff)

                // We know both are < eps_half

                // So their sum is < eps_half + eps_half
                // Use that if a < b and c < d, then a + c < b + d
                from real.real_base import add_lt_lt
                add_lt_lt(x_diff.abs, eps_half, y_diff.abs, eps_half)

                lte_lt_trans(diff.abs, x_diff.abs + y_diff.abs, eps_half + eps_half)
                diff.abs < eps_half + eps_half

                // eps_half + eps_half < eps
                lte_lt_trans(diff.abs, eps_half + eps_half, eps)

                (partial_sum(abs_fn(a), n) - partial_sum(abs_fn(a), n - k)).abs < eps
            }
        }
    }
}
