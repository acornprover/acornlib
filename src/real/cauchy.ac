    partial_sum_product_as_rectangular_sum(a, b, n)

    partial_sum_cauchy_as_triangle(a, b, n)

    rectangular_sum_tail_decomp(a, b, n)
}

/// Absolute value of the tail contribution matches the tail built from absolute values.
