/// Split |b(j)| into triangular and tail row indicators.
theorem abs_row_indicator_split(b: Nat -> Real, n: Nat, i: Nat, j: Nat) {
    abs_fn(b)(j) = triangle_row_indicator(b, n, i, j) + tail_triangle_row_indicator(b, n, i, j)
} by {
    if i + j < n {
