            triangle_fn(prod_fn(a, b), n, i, j) = triangle_product(a, b, n, i, j)
        }
        triangle_fn(prod_fn(a, b), n, i, j) = triangle_product(a, b, n, i, j)
    }

    // Use pointwise equality to show rectangular_sums are equal
    // Expand rectangular_sums
    rectangular_sum_expands(n, n, triangle_fn(prod_fn(a, b), n))

    rectangular_sum_expands(n, n, triangle_product(a, b, n))

    // Show row_sum(n, triangle_fn(prod_fn(a, b), n), i) = row_sum(n, triangle_product(a, b, n), i) for all i
