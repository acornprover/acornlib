    define p(x: List<T>) -> Bool {
        map(x, f).length = x.length
    }

    // Base case
    p(List.nil<T>)

    // Inductive step
    forall(head: T, tail: List<T>) {
        if p(tail) {
            map(List.cons(head, tail), f).length = List.cons(head, tail).length
        }
    }

